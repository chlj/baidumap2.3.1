<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 列表 -->
   
    <style name="list_conditions_style">
        <item name="android:layout_marginBottom">@dimen/pixels_3</item>
        <item name="android:padding">@dimen/pixels_3</item>
        <item name="android:background">@drawable/mm_btn_focused</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="list_querybtn_style">
        <item name="android:background">@drawable/mm_btn_focused</item> 
        <item name="android:tag">0</item> 
        <item name="android:text">查询</item> 
        <item name="android:textColor">#2e6ee1</item>
        <item name="android:textSize">@dimen/textsize_10</item>
    </style>
    
    <!-- 行 -->
    <style name="item_background_style">
        <item name="android:background">#ffffff</item>
        <!-- <item name="android:background">@drawable/function_bak</item> -->
    </style>
    <style name="item_button_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/pixels_10</item>
        <item name="android:layout_marginTop">@dimen/pixels_16</item>
        <item name="android:background">@drawable/more</item>
        <item name="android:text"></item>
        <item name="android:textColor">#2e6ee1</item>
        <item name="android:textSize">@dimen/textsize_10</item>
    </style>
    <style name="item_Layout_style">
        <item name="android:layout_marginBottom">@dimen/pixels_5</item>
    </style>
   <!--  黑色 -->
    <style name="item_text1_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textsize_12</item>
    </style>
    <!-- 灰色 -->
    <style name="item_text2_style">
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">@dimen/textsize_10</item>
    </style>
    <!-- 红色字体 -->
    <style name="item_text3_style">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">@dimen/textsize_12</item>
    </style>    
    <style name="item_text4_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textsize_10</item>
    </style>
       
</resources>
