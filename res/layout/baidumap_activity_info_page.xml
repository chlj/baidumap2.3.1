<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/top_background_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title_text"
            style="@style/top_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情页面" />

        <Button
            android:id="@+id/back"
            style="@style/top_btnBack_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pixels_5"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/delete"
                style="@style/top_btnRight2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/FormCenter_Layout"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            style="@style/mapsigndetails_cntline_twoll" >

            <TextView
                android:id="@+id/lab_Name"
                style="@style/mapsigndetails_cntline_twotextview1"
                android:text="名称:"
                android:textColor="@color/map_detialdis_view" >
            </TextView>

            <TextView
                android:id="@+id/TvName"
                style="@style/mapsigndetails_cntline_twotextview2" >
            </TextView>
        </LinearLayout>
        
            <LinearLayout
            android:id="@+id/LinearLayout02"
            style="@style/mapsigndetails_cntline_twoll" >

            <TextView
                android:id="@+id/lab_Address"
                style="@style/mapsigndetails_cntline_twotextview1"
                android:text="地址:"
                android:textColor="@color/map_detialdis_view" >
            </TextView>

            <TextView
                android:id="@+id/TvAddress"
                style="@style/mapsigndetails_cntline_twotextview2" >
            </TextView>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>